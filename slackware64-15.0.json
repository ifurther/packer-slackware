{
  "description": "A slackware 64-bit 14.2 installation with Virtualbox tools installed",
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Linux26_64",
    "iso_url": "http://mirrors.slackware.com/slackware/slackware-iso/slackware64-15.0-iso/slackware64-15.0-install-dvd.iso",
    "iso_checksum": "f8418ef0ec2c0a205adf5dbc2f2a1971",
    "iso_checksum_type": "md5",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "shutdown_command": "shutdown -h now",
    "hard_drive_interface": "sata",
    "export_opts": [
      "--manifest",
      "--vsys", "0",
      "--description", "Slackware 15.0 64-bit minimum installation",
      "--version", "0.1.0"
    ],
    "boot_command": [
      "<wait><enter><wait5>",
      "<wait><enter>",
      "<wait>root<enter>",
      "<wait>fdisk /dev/sda<enter>",
      "<wait>o<enter>n<enter>p<enter>1<enter><enter><enter>w<enter>",
      "<wait>setup<enter>",
      "<wait>t<enter><enter>f<enter><enter><wait10><enter>",
      "<wait>1<enter>a<enter><wait10>",
      "<wait>e<spacebar>f<spacebar>kk<spacebar>t<spacebar>t<spacebar>x<spacebar>x<spacebar>x<spacebar>y<spacebar><enter>",
      "<wait>f<enter>",
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait><enter>",
      "<wait><enter>",
      "<wait><enter>",
      "<wait><enter>",
      "<wait>n",
      "<wait>M<enter>",
      "<wait5><enter>",
      "<wait5>n",
      "<wait>y",
      "<wait>slackware<enter>",
      "<wait>example.org<enter>",
      "<wait>d<enter><enter>y",
      "<wait><enter>",
      "<wait>n",
      "<wait>y<enter>",
      "<wait>ggg<enter>",
      "<wait>y",
      "<wait>vagrant<enter>",
      "<wait>vagrant<enter>",
      "<wait>vagrant<enter>",
      "<wait><enter><enter>",
      "<wait>e<wait><enter><wait><enter>",
      "<wait>reboot<enter>",
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
      "root<enter>",
      "<wait>vagrant<enter>",
      "echo PermitRootLogin yes >> /etc/ssh/sshd_config<enter>",
      "/etc/rc.d/rc.sshd restart<enter>"
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "script": "vagrantize.sh"
  }],
  "post-processors": ["vagrant"]
}
